{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    {{#with main}}
    <main>
        <section>
            {{> title data="Work history" big=true}}
            <div>
                <ul>
                {{#each works}}
                    <li>
                        <div>
                            {{position}}
                        </div>

                        <br>

                        <div>
                            
                            {{duration.from}} - 
                            {{#if duration.to}} 
                                {{duration.to}}
                            {{else}}
                                (досі працюємо) 
                            {{/if}} 
                        </div>

                        <br>

                        <div>
                            {{> link text=company.name href=company.url blank=true noLine=true}}
                        </div>

                        <br>
                        <br>

                        <div>
                            <strong>
                                Projects ({{projectAmount}})
                            </strong>
                        </div>
                        
                        <br>

                        <ul>
                            {{#each projects}}
                                <li>
                                    <div>{{> link text=name href=url blank=true noLine=true}}</div>
                                    
                                    <br>

                                    <div>
                                        <p>
                                            {{about}}
                                        </p>
                                    </div>

                                    <br>

                                    <div>
                                        <em>Project stacks ({{stackAmount}})</em>
                                    </div>

                                    <br>

                                    <div>
                                        {{#each stacks}}
                                            <ul>
                                                <li>
                                                    {{name}}
                                                </li>
                                            </ul>
                                        {{/each}}
                                    </div>

                                    <br>

                                    <div>
                                        <em>Project awards ({{awardAmount}}) </em>
                                    </div>

                                    <br>

                                    <div>
                                        {{#each awards}}
                                            <ul>
                                                <li>
                                                    {{name}}
                                                </li>
                                            </ul>
                                        {{/each}}
                                    </div>

                                    <br>

                                </li>
                            {{/each}}
                        </ul>
                    </li>
                    <br>
                {{/each}}
                </ul>
            </div>
        </section>

    </main>
    {{/with}}
</div>

