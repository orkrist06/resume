<div class="col-12">
    <div class="row">
        {{#each data}}
        <div class="col-5 my-2">
            <div class="card">
                <div class="card-body">
                    <div class="card-img-top">
                        <img src="{{img}}">
                    </div>
                    <div class="m-1">
                        {{#if isHot}}
                        <span class="badge text-uppercase text-bg-warning">hot!</span>
                        {{/if}}
                        {{#if isNew}}
                        <span class="badge text-bg-primary">New</span>
                        {{/if}}
                    </div>
                    <div class="my-2">
                        {{#if isFast}}
                        <div class="mt-4 mb-2">
                            <span class="badge text-bg-success">Швидка доставка</span>
                        </div>
                        {{/if}}

                        {{#if isFree}}
                        <div>
                            <span class="badge text-bg-secondary">Безкоштовна доставка</span>
                        </div>
                        {{/if}}
                    </div>

                    <h5>{{name}}</h5>

                    <div class="my-1">{{amount}} {{text}}</div>

                    <div class="my-2">
                        <b>{{price}}</b>
                    </div>

                    <div class="my-2">
                        {{delivery}}
                    </div>

                    <div class="mt-3">
                        {{#each buttons}}
                        <div class="mt-2">
                            <a class="btn {{#if isPrimary}}btn-primary{{/if}}{{#if isSecondary}}btn-secondary{{/if}}"
                                href="{{link}}">{{text}}</a>
                        </div>
                        {{/each}}
                    </div>

                    <div class="my-2">
                        <ul>
                            {{#each characteristics}}
                            <li>{{title}}: {{value}}</li>
                            {{/each}}
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>